@model List<PilotModel>

@{
    ViewData["Title"] = "Pilots";
}

<h1>Pilots</h1>

<a asp-action="Create" class="btn btn-primary">Add New Pilot</a>

<table class="table">
    <thead>
        <tr>
            <th scope="col">id</th>
            <th scope="col">name</th>
            <th scope="col">surname</th>
            <th scope="col">full_name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pilot in Model)
        {
            <tr>
                    <th scope="row">@pilot.id</th>
                    <td>@pilot.name</td>
                    <td>@pilot.surname</td>
                    <td>@pilot.full_name</td>
                         <td>
                                        <a asp-action="Delete" asp-route-id="@pilot.id" class="btn btn-danger">Delete</a>
                                </td>
            </tr>
        }
    </tbody>
</table>