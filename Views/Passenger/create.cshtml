@model PassengerModel

@{
    ViewData["Title"] = "Create Passenger";
}

<h1>Create Passenger</h1>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label asp-for="name" class="control-label"></label>
        <input asp-for="name" class="form-control" />
        <span asp-validation-for="name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="surname" class="control-label"></label>
        <input asp-for="surname" class="form-control" />
        <span asp-validation-for="surname" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="flight_id" class="control-label">Flight ID</label>
        <select asp-for="flight_id" class="form-control">
            <option value="">Select Flight ID</option>
            @foreach (var flightId in ViewBag.FlightIds)
            {
                    <option value="@flightId">@flightId</option>
            }
        </select>
        <span asp-validation-for="flight_id" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>
