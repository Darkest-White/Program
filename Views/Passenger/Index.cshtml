@model List<PassengerModel>

@{
    ViewData["Title"] = "Passengers";
}

<h1>Passengers</h1>

<a asp-action="Create" class="btn btn-success">Add New Passenger</a>

<table class="table">
    <thead>
        <tr>
            <th scope="col">id</th>
            <th scope="col">name</th>
            <th scope="col">surname</th>
            <th scope="col">flight_id</th>
            <th scope="col">full_name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var passenger in Model)
        {
                <tr>
                    <th scope="row">@passenger.id</th>
                    <td>@passenger.name</td>
                    <td>@passenger.surname</td>
                    <td>@passenger.flight_id</td>
                    <td>@passenger.full_name</td>
                             <td>
                                    <a asp-action="Delete" asp-route-id="@passenger.id" class="btn btn-danger">Delete</a>
                            </td>
                </tr>
        }
    </tbody>
</table>
