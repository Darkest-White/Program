@model Program.Models.FlightModel

@{
	ViewData["Title"] = "Create Flight";
}

<h1>Create Flight</h1>

<form asp-action="Create" method="post">
	<div class="form-group">
		<label asp-for="start_time" class="control-label"></label>
		<input asp-for="start_time" class="form-control" type="datetime-local" required />
		<span asp-validation-for="start_time" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="route_id" class="control-label">route</label>
		<select asp-for="route_id" class="form-control" required>
			<option value=""> Select Route ID </option>
			@foreach (var route in ViewBag.Routes)
			{
							<option value="@route.id - @route.direction">@route.id - @route.direction</option>
			}
		</select>
		<span asp-validation-for="route_id" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="pilot_id" class="control-label">pilot</label>
		<select asp-for="pilot_id" class="form-control" required>
			<option value="">Select Pilot ID</option>
			@foreach (var pilot in ViewBag.Pilots)
			{
							<option value="@pilot.id - @pilot.full_name">@pilot.id - @pilot.full_name</option>
			}
		</select>
		<span asp-validation-for="pilot_id" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="plane_id" class="control-label">plane</label>
		<select asp-for="plane_id" class="form-control" required>
			<option value="">Select Plane ID</option>
			@foreach (var plane in ViewBag.Planes)
			{
						<option value="@plane.id - @plane.mark">@plane.id - @plane.mark</option>
			}
		</select>
		<span asp-validation-for="plane_id" class="text-danger"></span>
	</div>
	<div class="form-group">
		<input type="submit" value="Create" class="btn btn-primary" />
	</div>
</form>

<a asp-action="Index" class="btn btn-secondary">Back to List</a>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
